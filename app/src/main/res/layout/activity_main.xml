<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yan.appwatch.MainActivity">


    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="502dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/open_service"
        android:layout_marginTop="66dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="65dp" />

    <Button
        android:id="@+id/open_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="49dp"
        android:text="開啟服務"
        android:onClick="openService"/>

    <Button
        android:id="@+id/stop_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="75dp"
        android:text="停止服務"
        android:onClick="closeService"/>

    <Button
        android:id="@+id/select_all_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/open_service"
        android:layout_below="@+id/open_service"
        android:text="全選"
        android:onClick="selectAll"/>

    <Button
        android:id="@+id/unselect_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stop_service"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/select_all_btn"
        android:onClick="unselectAll"
        android:text="取消選擇" />

    <Button
        android:id="@+id/set_whitelist_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stop_service"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/unselect_btn"
        android:onClick="setwhitelist"
        android:text="設定白名單" />

</RelativeLayout>
